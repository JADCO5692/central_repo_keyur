<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_subscription_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.subscription.order.form.inherited.npc_commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_order_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="np_partner_id"/>
                <field name="npc_fees_waiver_months" readonly="npc_waiver_locked"/>
                <field name="npc_fees_waiver_start_date" readonly="npc_waiver_locked" invisible="not npc_fees_waiver_months"/>
                <field name="npc_fees_waiver_days" invisible="not npc_fees_waiver_months"/>
            </xpath>
        </field>
    </record>
</odoo>
