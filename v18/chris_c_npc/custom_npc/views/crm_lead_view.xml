<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_lead_view_form_commission" model="ir.ui.view">
        <field name="name">crm.lead.view.form.commission</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='npc_user_type']" position="after">
                <field name="np_partner_id"></field>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="open_tickets" type="object" icon="fa-life-ring">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="tickets_count"/>
                        </span>
                        <span class="o_stat_text">Helpdesk Tickets</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
