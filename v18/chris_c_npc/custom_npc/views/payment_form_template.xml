<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="method_form_payment_fees_custom" inherit_id="payment_fees_base.method_form_payment_fees" name="Payment Form: Payment Fees">
        <xpath expr="//t[@t-if='provider_sudo.fees_active and amount and currency']" position="replace">
            <t t-if="provider_sudo.fees_active and amount and currency">
                <t t-if='provider_sudo.get_fees(amount, partner_id, pm_sudo) > 0'>
                    <span class="badge rounded-pill text-bg-secondary ms-1">
                        +
                        <t t-esc="provider_sudo.get_fees(amount, partner_id, pm_sudo)"
                            t-options="{'widget': 'monetary', 'display_currency': currency}" />
                        Fees
                    </span>
                </t>
            </t>
        </xpath>
    </template>

    <template id="token_form_payment_fees_custom" inherit_id="payment_fees_base.token_form_payment_fees" name="Payment Token Form: Payment Fees">
        <xpath expr="//t[@t-if='token_sudo.provider_id.fees_active and amount and currency']" position="replace">
            <t t-if="token_sudo.provider_id.fees_active and amount and currency">
                <t t-if='token_sudo.provider_id.get_fees(amount, partner_id, pm_sudo) > 0'>
                    <span class="badge rounded-pill text-bg-secondary ms-1">
                        +
                        <t t-esc="token_sudo.provider_id.get_fees(amount, partner_id, pm_sudo)"
                            t-options="{'widget': 'monetary', 'display_currency': currency}" />
                        Fees
                    </span>
                </t>
            </t>
        </xpath>
    </template>
</odoo>