<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoice_view_form_inherit_ncp" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.npc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="before">
                <field name="np_partner_id" readonly="1"/>
            </xpath>
            <xpath expr="//div[@name='due_date']" position="after"> 
                <field name="custom_contract_end_date" readonly="state != 'draft'"/>
            </xpath>
            <xpath expr="//group[@id='other_tab_group']" position="after">
                <group>
                    <group string="Tracking">
                        <field name="custom_lead_id" readonly="1"/>
                        <field name="custom_lead_id2"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_vendor_bills"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        type="object"
                        invisible="move_type != 'out_invoice' or vendor_bill_count == 0"
                    >
                    <div class="o_stat_info">
                        <field name="vendor_bill_count" class="o_stat_value"/>
                    <span class="o_stat_text"> VendorBills</span>
                    </div>
                </button>
                <button name="action_view_related_invoices"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        type="object"
                        invisible="move_type != 'in_invoice' or related_invoice_count == 0"
                    >
                    <div class="o_stat_info">
                        <field name="related_invoice_count" class="o_stat_value"/>
                    <span class="o_stat_text"> Related Invoices</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_create_vendor_bill"
                        string="Create Vendor Bills"
                        invisible="move_type != 'out_invoice'"
                        type="object"
                        />
            </xpath>
        </field>
    </record>

</odoo>
