<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="payment_payment_methods_ext" inherit_id="payment.payment_methods" name="Payments Methods">
        <xpath expr="//div[contains(@class,'wrap')]//div[contains(@class,'container')]/div[contains(@class,'row')]" position="before">
            <div t-if="not len(tokens_sudo)" class="row justify-content-center text-center m-auto mb-5">
                <h2 class="fs-4 fw-bolder">
                    Please add your saved payment method to download your signed documents
                </h2>
                <span class="mt-4">You can change your payment method at any time.</span>
            </div>
        </xpath>
        <xpath expr="//div[contains(@class,'wrap')]//div[contains(@class,'container')]" position="inside">
            <div class="container docs_to_doenload my-4" >
                <div class="row gap-2 justify-content-center">
                    <div t-if="len(tokens_sudo)" class="col-12 col-md-7">
                        <h4 class="fs-6 small text-uppercase fw-bolder">
                            Your Signed Documents
                        </h4>
                    </div>
                    <div class="col-12 col-md-7 px-0">
                        <div t-if="len(tokens_sudo)" class="row justify-content-center m-auto">
                            <div t-foreach="docs" t-as="doc" class="col-12 col-md-6 col-lg-6 p-6 my-2 px-2"> 
                                <div class="card h-100 p-2">
                                    <span class="d-block" t-esc="doc.name"/>
                                    <a class="w-100 h-100" aria-label="Download" role="button" t-att-data-aid="doc" title="Download Document"
                                        t-attf-href="/my/attachment/download/#{doc.id}">     
                                        <span class="d-block mt-2">Download</span> 
                                    </a>
                                </div>
                            </div>
                        </div>  
                    </div>
                </div>    
            </div>
        </xpath>
    </template>

</odoo>
