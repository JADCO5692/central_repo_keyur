<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_get_creds_form" model="ir.ui.view">
        <field name="name">sh.get.creds.form</field>
        <field name="model">sh.office365.base.config</field>
        <field name="arch" type="xml">
            <form string="Authorize">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button type="object" class="btn btn-primary" name="AuthorizeCreds" string="Generate Token" invisible="state == 'confirm'" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" default_focus="1" placeholder="Name" required="1"/>
                    </h1>
                    <group>
                        <field name="user_id"/>
                        <field name="client_id" password="True"/>
                        <field name="client_secret" password="True"/>
                        <field name="redirect_url"/>
                    </group>
                    <h2 class="text-primary mb-2">Log History</h2>
                    <field name="log_historys" readonly="1">
                        <list decoration-success="state=='success'" decoration-danger="state=='error'">
                            <field name="field_type"/>
                            <field name="operation"/>
                            <field name="error"/>
                            <field name="datetime"/>
                            <field name="state"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id='sh_get_creds_list' model='ir.ui.view'>
        <field name="name">sh.get.creds.list</field>
        <field name="model">sh.office365.base.config</field>
        <field name="arch" type="xml">
            <list string="Authorize">
                <field name="user_id"/>
                <field name="client_id" widget="password"/>
                <field name="client_secret" widget="password"/>
                <field name="redirect_url"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="sh_get_creds_kanban_view" model="ir.ui.view">
        <field name="name">sh.get.creds.kanban.view</field>
        <field name="model">sh.office365.base.config</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" sample="1">
                <field name="user_id"/>
                <field name="name"/>
                <field name="client_id"/>
                <field name="client_secret"/>
                <field name="redirect_url"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="user_id"/>
                                    <h2>
                                        <field name="name"/>
                                    </h2>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories mt-3"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sh_get_creds_action" model="ir.actions.act_window">
        <field name="name">Authorize</field>
        <field name="res_model">sh.office365.base.config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,form,list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Authorize
            </p>
        </field>
    </record>

    <menuitem name="Office 365" id="sh_office365_base" groups="sh_office365_base_user" />

    <menuitem name="Authorize" action="sh_get_creds_action" id="sh_get_creds_item" parent="sh_office365_base" sequence="1" groups="sh_office365_base_user" />
</odoo>