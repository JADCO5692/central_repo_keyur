<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="payment_form_custom_label" inherit_id="payment.form" >
      <!-- Locate the <h4> with the "Choose a payment method" text -->
        <xpath expr="//button[@name='o_payment_expand_button']" position="replace">
            <button t-if="collapse_payment_methods"
                        name="o_payment_expand_button"
                        type="button"
                        href="#o_payment_methods"
                        class="btn btn-link"
                        data-bs-toggle="collapse"
            >
                Click to set up Direct ACH for 0% fees / No additional fees
            </button>
        </xpath>
    </template>
</odoo>