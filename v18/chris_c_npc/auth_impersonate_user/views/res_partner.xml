<odoo>
    <record id="view_partner_tree" model="ir.ui.view">
        <field name="name">auth_impersonate_user.res.partner.list</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <button
                    name="impersonate_user"
                    invisible="can_impersonate_user == False or can_be_impersonated == False"
                    string="Impersonate"
                    type="object"
                    class="oe_highlight"
                />
            </xpath>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">auth_impersonate_user.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button
                        name="impersonate_user"
                        invisible="can_impersonate_user == False or can_be_impersonated == False"
                        string="Impersonate"
                        type="object"
                    />
                </header>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">auth_impersonate_user.res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_company']" position="after">
                <separator/>
                <filter string="Portal Users" name="partner_share"
                        domain="[('partner_share', '=', True), ('user_ids', '!=', False)]"/>
            </xpath>
        </field>
    </record>

</odoo>
