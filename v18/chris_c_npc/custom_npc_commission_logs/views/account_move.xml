<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoice_view_form_inherit_ncp" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.npc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml"> 
            <xpath expr="//group[@name='accounting_info_group']" position="inside">
                <field name="commission_id" widget="many2many_tags" readonly="1"/>
                <field name="related_commission_id" invisible="move_type != 'in_invoice'" readonly="1"/>
                <field name="is_commission_excluded" widget="boolean_toggle" class="o_field_boolean"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_vendor_bills_cl"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        type="object"
                        invisible="move_type != 'out_invoice' or vendor_bill_count_cl == 0"
                    >
                    <div class="o_stat_info">
                        <field name="vendor_bill_count_cl" class="o_stat_value"/>
                    <span class="o_stat_text"> VendorBills (CL)</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
