<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sync_wizard" model="ir.ui.view">
        <field name="name">npc_calendly.sync.wizard</field>
        <field name="model">npc_calendly.sync</field>
        <field name="arch" type="xml">
            <form>
                <p>Manually retrieve scheduled Zoom meetings
                    for opportunities in <strong>Scheduled zoom call</strong> stage
                    using Calendly API.
                </p>
                <button type="object"
                        name="import_events_to_crm"
                        string="Import Calendly Meetings"
                        class="oe_highlight"/>
                <footer>
                    <button string="Close" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sync_wizard" model="ir.actions.act_window">
        <field name="name">Calendly Sync</field>
        <field name="res_model">npc_calendly.sync</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sync_wizard"
              name="Sync Calendly Meetings"
              sequence="93"
              parent="crm.crm_menu_config"
              action="action_sync_wizard"/>

</odoo>