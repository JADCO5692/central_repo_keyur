<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sync_wizard" model="ir.ui.view">
        <field name="name">npc_sharetribe.sync.wizard</field>
        <field name="model">npc_sharetribe.sync</field>
        <field name="arch" type="xml">
            <form>
                <button type="object"
                        name="import_users_to_crm"
                        string="Import Sharetribe Users"
                        class="oe_highlight"/>
                <footer>
                    <button string="Close" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sync_wizard" model="ir.actions.act_window">
        <field name="name">Sharetribe Sync</field>
        <field name="res_model">npc_sharetribe.sync</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sync_wizard"
              name="Sync Sharetribe"
              sequence="90"
              parent="crm.crm_menu_config"
              action="action_sync_wizard"/>

</odoo>