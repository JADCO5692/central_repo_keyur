<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="npc_favorites_view_form" model="ir.ui.view">
            <field name="name">npc.favorites.view.form</field>
            <field name="model">npc.favorites</field>
            <field name="arch" type="xml">
                <form string="Npc Favorites">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="partner_id" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- List View -->
        <record id="npc_favorites_view_list" model="ir.ui.view">
            <field name="name">npc.favorites.view.list</field>
            <field name="model">npc.favorites</field>
            <field name="arch" type="xml">
                <list string="Npc Favorites" editable="top">
                    <field name="name"/>
                    <field name="partner_id"/>
                </list>
            </field>
        </record>

        <record id="npc_favorites_view_search" model="ir.ui.view">
            <field name="name">npc.favorites.view.search</field>
            <field name="model">npc.favorites</field>
            <field name="arch" type="xml">
                <search string="NPC Favorites">
                    <field name="name"/>
                </search>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_npc_favorites_view" model="ir.actions.act_window">
            <field name="name">Favorites Physicians</field>
            <field name="res_model">npc.favorites</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first npc favorites_view!
                </p>
            </field>
        </record>
        
        <!-- Menu -->
        <menuitem id="menu_npc_favorites_view_crm"
                  name="Favorites Physicians"
                  action="action_npc_favorites_view"
                  parent="crm.crm_menu_sales"
                  sequence="10"/>
        
        <menuitem id="menu_npc_favorites_view_contacts"
                  name="Favorites Physicians"
                  action="action_npc_favorites_view"
                  parent="contacts.menu_contacts"
                  sequence="10"/>

        <menuitem id="menu_npc_favorites_view_subscription"
                  name="Favorites Physicians"
                  action="action_npc_favorites_view"
                  parent="sale_subscription.menu_sale_subscription"
                  sequence="10"/>
    </data>
</odoo>