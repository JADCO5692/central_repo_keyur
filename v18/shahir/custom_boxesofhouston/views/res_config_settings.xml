<?xml version="1.0" encoding="utf-8"?>
<odoo>

      <record id="res_config_settings_view_form_ext" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale.ext</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@groups='stock.group_adv_location']" position="after">  
                <div class="row">
                    <label for="pos_route_ids" string="Additional Routes" class="col-lg-3 o_light_label"/>
                    <field name="pos_route_ids" widget="many2many_tags"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
