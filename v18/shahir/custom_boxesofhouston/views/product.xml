<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_form_inherit_purchase_tab_visibility" model="ir.ui.view">
        <field name="name">product.template.form.purchase.tab.visibility</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="attributes">
                <attribute name="invisible">type == 'combo'</attribute>
                <attribute name="groups"></attribute>
            </xpath>
        </field>
    </record>

    <record id="product_form_inherit_custom_boxesofhoston_view" model="ir.ui.view">
        <field name="name">product.form.boxesofhoston.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hs_code']" position="after">
                <field name="replenishment_threshold"/>
            </xpath>
        </field>
    </record>


</odoo>
