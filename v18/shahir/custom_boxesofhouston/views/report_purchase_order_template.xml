<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document_inherit1" inherit_id="purchase.report_purchaseorder_document"> 
        <xpath expr="//th[@name='th_quantity']" position="replace">
            <th name="th_quantity" class="text-end"><strong>Qty</strong></th>
            <th name="th_uom" class="text-end"><strong>UOM</strong></th>
        </xpath> 
        <xpath expr="//t[@t-if='not line.display_type']/td[2]" position="replace">
            <td class="text-end">
                <span t-field="line.product_qty"/>  
            </td> 
            <td class="text-end">
                <span t-field="line.product_uom.name" groups="uom.group_uom"/> 
            </td>
        </xpath>
        <xpath expr="//div[@class='page']/div[@id='total']/div[1]" position="replace">
            <div class="col-4 offset-8">
                <table class="o_total_table table table-borderless">
                    <t t-call="purchase.document_tax_totals">
                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                        <t t-set="currency" t-value="o.currency_id"/>
                    </t>
                </table>
            </div>
        </xpath>
        <xpath expr="//t[@t-set='information_block']/strong" position="replace"> 
            <strong>Ship to:</strong> 
        </xpath>
        <xpath expr="//div[@t-field='o.partner_id']" position="before">
            <strong>Vendor:</strong> 
        </xpath>
    </template> 

    <template id="purchase_stock_report_purchaseorder_document_inherit" inherit_id="purchase_stock.report_purchaseorder_document">
        <xpath expr="//t[@t-set='information_block']" position="replace"> 
            <strong>Ship to:</strong> 
        </xpath>
    </template>
    <template id="purchase_stock_report_purchasequotation_document_inherit" inherit_id="purchase_stock.report_purchasequotation_document">
        <xpath expr="//t[@t-set='information_block']/strong" position="replace"> 
            <strong>Ship to:</strong> 
        </xpath>
        <xpath expr="//div[@t-field='o.partner_id']" position="before">
            <strong>Vendor:</strong> 
        </xpath>
        <th name="th_expected_date" position="replace"/>
        <xpath expr="//span[@t-field='order_line.date_planned']/.." position="replace"> 
        </xpath>
    </template> 

    <template id="external_layout_folder_inherit" inherit_id="web.external_layout_folder">
        <xpath expr="//t[@t-set='header_shape_height']" position="attributes">
            <attribute name="t-value">'100'</attribute> 
        </xpath>
        <xpath expr="//li[@t-if='company.is_company_details_empty']" position="replace"/>
        <xpath expr="//li[1]" position="replace"/>
    </template>
</odoo>
