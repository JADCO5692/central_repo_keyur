<templates>

    <t t-name="custom_date_range" >
        <div class="d-flex align-items-center bg-100 rounded px-1 dates-container">
            <div class="d-flex align-items-center">
                <lable class="form-lable">From</lable>
                <input class="form-control border-0 sdate" type="date" name="sdate"/>
            </div>
            <div class="d-flex align-items-center">
                <lable class="form-lable">To</lable>
                <input class="form-control border-0 edate" type="date" name="edate"/>
            </div> 
            <div><button class="btn btn-secondary btn-apply">Apply</button> </div>
        </div>
    </t>

</templates>
