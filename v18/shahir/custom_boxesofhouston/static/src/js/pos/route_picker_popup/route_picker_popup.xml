<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.RoutePickerPopup">
        <Dialog title="props.title">
            <!-- <input class="form-control form-control-lg w-75 mx-auto" type="date" t-model="state.shippingRoute" t-ref="select"/> -->
            <select class="form-control form-control-lg w-75 mx-auto" t-ref="select">
                <option value="">Select Route</option>
                <t t-foreach="props.routes" t-as="route" t-key="route_index">
                    <option t-att-value="route.id" t-att-selected="route.id == props.current_route"><t t-esc="route.name"/></option>
                </t>
            </select>
            <t t-set-slot="footer">
                <button class="btn btn-lg btn-primary" t-on-click="confirm" t-esc="props.confirmLabel" />
            </t>
        </Dialog>
    </t>
</templates>
