 <odoo>
    <record id="mail_template_shop_delivery_confirm_order" model="mail.template">
        <field name="name">Dropship Order Confirmation Template</field>
        <field name="subject">Dropship Order Confirmation </field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="email_from">{{ (object.company_id.email) }}</field>
        <field name="email_to">{{ (object.partner_shipping_id.email or object.partner_id.email) }}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="font-size: 14px; margin: 0px 0px 10px 0px;">
                    Dear <t t-out="object.partner_shipping_id.name or object.partner_id.name"/>,
                </p>

                <p style="font-size: 13px; margin: 0px;">
                    Thank you for your order! We are pleased to confirm your order
                    <b><t t-out="object.name"/></b>.
                </p>
                <br/>

            </div>
        </field>
    </record>
</odoo>
