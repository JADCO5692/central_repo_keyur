<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="website_sale_payment_inherit_form_view" name="Partial Payment" inherit_id="website_sale.total">
        <xpath expr="//div//table//tr[@id='order_total']" position="after">
            <t t-if="page_name">
                <tr t-if="user_id.partner_id.allow_partial_payment">
                    <td colspan="2" class="border-0 ps-0 pt-3" style="width:60%">
                        <input type="checkbox" class="form-check-input" id="payment_checkbox"/>
                        <strong>Down-Payment</strong>
                    </td>
                    <td class="partial_payment_switch_button text-end border-0 px-0 pt-3">
                        <input type="text" id="payment_values" t-att-value='"{0:.2f}".format(website_sale_order.amount_total or 0)' t-att-data-max="website_sale_order.amount_total" style="text-align:right" name="payment_values" class="form-control"/> 
                    </td>
                </tr>
            </t>
        </xpath>
    </template>

</odoo>
