<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sale_order_report_inherit"
        inherit_id="sale.report_saleorder_document">
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_sm_customer_product" class="text-left"
                style="float: left;">Product</th>
        </xpath>
        <xpath expr="//td[@name='td_name']" position="before">
            <td>
                <t t-if="line.product_id">
                    <span t-field="line.product_id.name"></span>
                    <br />
                    <img t-if="line.sudo().custom_item_image"
                        width="100"
                        t-att-src="'data:image/png;base64,%s' % line.sudo().custom_item_image.decode('utf-8')"
                        alt="Product Image" />
                </t>
            </td>
        </xpath>
        <xpath
            expr="//t[contains(@t-if, 'doc.partner_shipping_id') and contains(@t-if, 'doc.partner_invoice_id')]"
            position="attributes">
            <attribute name="t-if">True</attribute>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
            </t>
        </xpath>
        <xpath expr="//h2[@class='mt-4']" position="replace">
        </xpath>
        <xpath expr="//t[@t-set='information_block']" position="replace">
            <t t-set="custom_dropship_order" t-value="doc.custom_dropship_order" />
            <t t-set="partner" t-value="doc.partner_id" />
            <t t-set="shopify_instance" t-value="doc.shopify_instance_id" />
            <t t-set="information_block">
                <div class="row">
                    <div class="col-4">
                        <strong>Customer:</strong>
                        <div t-field="doc.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />

                    </div>
                    <div name="shipping_delivery_address" class="col-4">
                        <strong>Shipping Address:</strong>
                        <div t-field="doc.partner_shipping_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                    </div>
                    <div class="col-4">
                        <table
                            style="padding: 0 10px; width: 100%; border-collapse: collapse;"
                            class="table table-sm table-borderless">

                            <span>
                                <strong> Sales Order # <span t-field="doc.name"
                                        style="font-size:14px !important" />
                                </strong>
                            </span>

                            <tr t-if="doc.date_order">
                                <td
                                    style="padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    <span t-if="doc.state in ['draft', 'sent']">Quotation
                                        Date:</span>
                                    <span t-else="">Order Date:</span>
                                    <br />
                                </td>
                                <td
                                    style="padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    <span class="m-0" t-field="doc.date_order"
                                        t-options='{"widget": "date"}'>
                                        2023-12-31
                                    </span>
                                </td>
                            </tr>
                            <tr t-if="doc.origin">
                                <td
                                    style="white-space: nowrap; width: 140px;padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    Sales Order:&#160;
                                </td>
                                <td
                                    style="white-space: nowrap; width: 140px;padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    <span t-field="doc.origin" />
                                </td>
                            </tr>
                            <tr t-if="doc.client_order_ref">
                                <td
                                    style="white-space: nowrap; width: 140px;padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    <span>Customer Order Ref:</span>
                                </td>
                                <td
                                    style="white-space: nowrap; width: 140px;padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    <span t-field="doc.client_order_ref" />
                                </td>
                            </tr>
                            <tr t-if="doc.user_id">
                                <td
                                    style="white-space: nowrap;border-bottom: hidden; width: 140px;padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    SalsePerson:
                                </td>
                                <td
                                    style="white-space: nowrap;border-bottom: hidden; width: 140px;padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    <span t-field="doc.user_id" />
                                    <!--                                <span>lbs</span>-->
                                </td>
                            </tr>
                            <tr>
                                <td
                                    style="padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    Payment Terms:
                                </td>
                                <td
                                    style="padding:0 !important; margin:0 !important; line-height:1.2 !important;">
                                    <p
                                        t-if="not is_html_empty(doc.payment_term_id.name)">
                                        <span t-field="doc.payment_term_id.name">The
                                            payment should also be transmitted
                                            with love
                                        </span>
                                    </p>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//t[@t-set='doc']" position="after">
            <style>
                * {
                font-size: 16px !important;
                }
            </style>
        </xpath>
<!--        <xpath expr="//div[@class='page']" position="after">-->
<!--            <style>-->
<!--                * {-->
<!--                font-size: 14px !important;-->
<!--                }-->
<!--            </style>-->
<!--        </xpath>-->
        <xpath expr="//div[@t-if='doc.user_id.name']" position="replace">
        </xpath>
        <xpath expr="//div[@t-if='doc.date_order']" position="replace">

        </xpath>
        <xpath expr="//p[@t-if='not is_html_empty(doc.payment_term_id.note)']"
            position="replace">

        </xpath>

        <xpath
            expr="//div[hasclass('page')]/div[@id='informations']/div[@name='informations_reference']"
            position="replace">

        </xpath>
        <xpath expr="//div[@name='signature']//div" position="replace">

        </xpath>
        <xpath expr="//td[@name='td_name']" position="replace">
            <td name="td_name">
                <span t-field="line.name" />
                <t t-if="line.custom_color_2">
                    <t t-esc="line.custom_color_2.display_name" />
                    <br />
                </t>
                <t t-if="line.custom_color_3">
                    <t t-esc="line.custom_color_3.display_name" />
                    <br />
                </t>
                <t t-if="line.custom_color_4">
                    <t t-esc="line.custom_color_4.display_name" />
                    <br />
                </t>
                <t t-if="line.custom_color_5">
                    <t t-esc="line.custom_color_5.display_name" />
                    <br />
                </t>
                <t t-if="line.custom_color_6">
                    <t t-esc="line.custom_color_6.display_name" />
                </t>
                <br />
                <t t-if="line.custom_attribute_1"
                    t-esc="line.custom_attribute_1.display_name"></t>
                <br />
                <t t-if="line.custom_tiff_file_name"> Tiff file: <t
                        t-esc="line.custom_tiff_file_name"></t>
                </t>
            </td>
        </xpath>
        <xpath expr="//span[@name='order_note']" position="replace">
        </xpath>
    </template>
    <template id="external_layout_address_inherit_information_block"
        inherit_id="web.address_layout">
        <xpath expr="//div[@name='information_block']" position="attributes">
            <!-- Remove the `class` attribute, or change it as needed -->
            <attribute name="class">ms-auto</attribute>
            <!-- Or if you want *no* class: -->
            <!-- <attribute name="class"/> -->
        </xpath>
    </template>
</odoo>
