<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="report_saleorder_document_custom" inherit_id="sale.report_saleorder_document">
    <xpath expr="//th[@name='th_description']" position="before">
          <th name="th_sm_customer_order_ref" class="text-left">Order Ref</th>
     </xpath>
     <xpath expr="//td[@name='td_name']" position="before">
        <td>
            <t t-if="(doc.client_order_ref and line.custom_order_no)">
                <t t-set="final_ref" t-value="doc.client_order_ref+'/'+line.custom_order_no"/>
                <span t-esc="final_ref"></span>
            </t>
            <t t-else="">
                <t t-if="doc.client_order_ref">
                   <span t-field="doc.client_order_ref"></span>
                </t>
                <t t-if="line.custom_order_no">
                    <span t-field="line.custom_order_no"></span>
                </t>
            </t>
        </td>
    </xpath>
</template>

</odoo>
