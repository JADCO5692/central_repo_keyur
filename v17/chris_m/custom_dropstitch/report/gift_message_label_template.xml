<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_gift_message_label_print" >
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="stock_pick"> 
                    <div class="page">
                        <t t-if="stock_pick.sale_id.partner_id.custom_customer_logo" >
                            <div class="row" >
                                <div class="text-center" style="margin-top: 26px;margin-bottom: 26px;" >
                                    <img t-att-src="image_data_uri(stock_pick.sale_id.partner_id.custom_customer_logo)" style="max-width:300px; max-height:300px;" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center">
                                    <p style="font-family: Candara; font-size: 18pt;">
                                        <strong><t t-esc="stock_pick.custom_gift_mess" /></strong>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- wave transfer gift label print report -->
    <template id="report_wt_gift_message_label_print" >
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="wave_transfer">
                    <t t-foreach="wave_transfer.picking_ids" t-as="picking" > 
                        <div class="page" t-if="picking.custom_gift_mess and not picking.custom_gift_mess.isspace()">
                            <t t-if="picking.sale_id.partner_id.custom_customer_logo" >
                                <div class="row">
                                    <div class="text-center">
                                        <img t-att-src="image_data_uri(picking.sale_id.partner_id.custom_customer_logo)" style="max-width:300px; max-height:300px;" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="text-center">
                                        <p style="font-family: Candara; font-size: 18pt;">
                                            <strong><t t-esc="picking.custom_gift_mess" /></strong>
                                        </p>
                                    </div>
                                </div> 
                            </t>
                        </div>
                        <p style="page-break-after:always;"/>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
