<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="message_wizard_form" model="ir.ui.view">
	    <field name="name">custom.message.wizard.form</field>
	    <field name="model">custom.message.wizard</field>
	    <field name="arch" type="xml">
	        <form>
	        	<sheet>
	        	<group>
	        		<group>
	        			<field name="message" readonly="1"/>
	        		</group>
	        		<group></group>
	        	</group>
	            </sheet>
	        	<footer>
	            	<button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/> 
	        	</footer>
	        </form>
	    </field>
	</record>
    
    <record id="message_wizard_form2" model="ir.ui.view">
        <field name="name">custom.message.wizard.form2</field>
        <field name="model">custom.message.wizard2</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name="production_id" invisible="1"/>
                        <field name="message" readonly="1"/>
                    </group>
                    <group></group>
                </group>
                </sheet>
                <footer>
                    <button name="action_ok" string="Yes" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="No" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="message_wizard_form3" model="ir.ui.view">
        <field name="name">custom.order.payment.form2</field>
        <field name="model">custom.order.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name="available_payment_method_line_ids" invisible="1"/>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="journal_id" required="1"/>
                        <field name="payment_method_line_id" required="1"/>
                        <field name="custom_downpayment_amount" required="1"/>
                    </group>
                    <group></group>
                </group>
                </sheet>
                <footer>
                    <button name="action_ok" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>