<odoo>
    <data>
        <!-- Inherit the tree view from account_accountant -->
        <record id="view_bank_statement_line_tree_bank_rec_widget_inherit_custom" model="ir.ui.view">
            <field name="name">account.bank.statement.line.tree.bank.rec.widget.inherit.custom</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account_accountant.view_bank_statement_line_tree_bank_rec_widget"/>
            <field name="arch" type="xml">
                <!-- Insert account_id before amount -->
                <field name="amount" position="before">
                    <field name="account_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>