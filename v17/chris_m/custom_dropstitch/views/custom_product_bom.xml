<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_product_bom_form_view" model="ir.ui.view">
        <field name="name">custom.product.bom.form_view</field>
        <field name="model">custom.product.bom</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="create_boms" string="Create BOMs" invisible="not product_variant_ids or state == 'completed'" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,completed,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_tmpl_id" />
                            <field name="product_id" />
                            <field name="bom_id" />
                        </group>
                        <group>
                            <field name="product_variant_ids" widget="many2many_tags"/> 
                            <field name="create_date" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter"> 
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/> 
                </div>
            </form>
        </field>
    </record>
    <record id="custom_product_bom_tree_view" model="ir.ui.view">
        <field name="name">custom.product.bom.tree.view</field>
        <field name="model">custom.product.bom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" />
                <field name="name" />
                <field name="product_tmpl_id" />
                <field name="product_id" />
                <field name="bom_id" />
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="action_custom_product_bom" model="ir.actions.act_window">
        <field name="name">Generate Product BOMs</field>
        <field name="res_model">custom.product.bom</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record id="seq_custom_product_bom" model="ir.sequence">
        <field name="name">Custom product BOMs</field>
        <field name="code">custom.product.bom</field>
        <field name="prefix">BOM-</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <menuitem id="menu_custom_product_bom" name="Generate Product BOMs" parent="custom_dropstitch.menu_sale_customizaion" 
        action="action_custom_product_bom"/>
</odoo>
