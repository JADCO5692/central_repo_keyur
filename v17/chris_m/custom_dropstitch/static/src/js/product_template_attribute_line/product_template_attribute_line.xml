<?xml version="1.0" encoding="utf-8"?>
<templates>

    <t t-name="saleProductConfigurator.ptal-custom">
        
        <div name="ptal" t-attf-class="#{this.props.attribute_values.length === 1 &amp;&amp; hasPTAVCustom() ? 'd-flex' : ''}">
        <!-- If the attribute line contains only one attribute value, we don't show the attribute
             value template or the attribute line title unless the single attribute value is custom,
             whereas in this case, only the title of the attribute line and the custom value
             template are rendered. -->
            <div class="d-flex flex-column flex-lg-row gap-2 mb-2">
                <label
                    t-if="this.props.attribute_values.length === 1 &amp;&amp; isSelectedPTAVCustom() || this.props.attribute_values.length &gt; 1"
                    t-out="this.props.attribute.name"
                    t-attf-class="fw-bold text-break #{this.props.attribute_values.length === 1 &amp;&amp; hasPTAVCustom() ? '' : 'w-lg-25'}"/>
                <t t-if="this.props.attribute_values.length > 1" t-call="{{getPTAVTemplate()}}"/>
            </div>  
            <t t-set="CurrAttrValue" t-value="GetInputCount()"/>
            <t t-if="CurrAttrValue.is_custom &amp;&amp; CurrAttrValue.line_number">
                <div class="cst-vals-container">
                    <t t-if="!['=','Initials'].includes(CurrAttrValue.name)">  
                        <t t-foreach="Array.from({ length: CurrAttrValue.line_number }, (_, index) => index + 1)" t-as="num" t-key="num_index">
                            <t t-set="line_number" t-value="(num_index+1).toString()"/> 
                            <input class="o_input w-75 mb-4 ms-lg-auto" type="text" placeholder="Enter a customized value" t-if="hasPTAVCustom &amp;&amp; isSelectedPTAVCustom()" 
                                t-att-data-field="'custom_line'+line_number"
                                t-att-value="this.get_field_value('custom_line'+line_number)"
                                t-on-change="_updatePTAVCustomLineValue" /> 
                        </t>
                    </t>
                    <t t-else="">
                        <t t-set="selected_att_field_name" t-value="get_field_name(CurrAttrValue)"/>
                        <input class="o_input w-75 mb-4 ms-lg-auto" type="text" placeholder="Enter a customized value" t-if="hasPTAVCustom &amp;&amp; isSelectedPTAVCustom()" 
                            t-att-data-field="selected_att_field_name"
                            t-att-value="this.get_field_value(selected_att_field_name)"
                            t-on-change="_updatePTAVCustomLineValue" />
                    </t>
                </div>
            </t>
            <t t-else="">
                <div class="cst-vals-container">
                    <input class="o_input w-75 mb-4 ms-lg-auto" type="text" placeholder="Enter a customized value" t-if="hasPTAVCustom &amp;&amp; isSelectedPTAVCustom()" t-att-value="this.props.customValue" t-on-change="updateCustomValue" />    
                </div>
            </t>
        </div>
    </t>
