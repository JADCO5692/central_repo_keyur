<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="model_pmall_config_pmall_orders" model="ir.cron">
            <field name="name">Sync Pmall Orders</field>
            <field name="model_id" ref="pmall_integration.model_pmall_config" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.chron_sync_pmall_orders()</field>
        </record>
        <record id="model_pmall_order_logs_pmall_orders_to_odoo" model="ir.cron">
            <field name="name">Sync Pmall Orders To Odoo</field>
            <field name="model_id" ref="pmall_integration.model_pmall_order_logs" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.chron_sync_to_odoo()</field>
        </record>
    </data>
    
    <data noupdate="1">
        <record id="ir_cron_external_logs_garbage_collector" model="ir.cron">
            <field name="name">External Logs Garbage Collector</field>
            <field name="user_id" ref="base.user_root"/>
            <field ref="model_order_create_error_log" name="model_id"/>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 03:25:59')"/>
            <field name="state">code</field>
            <field name="code">model.unlink_old_logs(older_than=31)</field>
        </record>
    </data>
</odoo>