<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--This is a common view for cron configuration wizard -->
    <record id="magento_notification_ept_form_view" model="ir.ui.view">
        <field name="name">shipstation.notification.ept.form.view</field>
        <field name="model">shipstation.notification.ept</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="is_enable"/>
                    </group>
                    <group>
                        <p colspan="2" class="alert alert-warning" role="alert">
                            <b>
                                <p>
                                    Schedule Activity Will be created for below processes:
                                </p>
                                <ul>
                                    <li>
                                        Delivery order not validated automatically.
                                    </li>
                                </ul>
                            </b>
                        </p>
                    </group>
                    <notebook>
                        <page string="Activity Configuration" invisible="not is_enable">
                            <group>
                                <group>
                                    <field name="activity_type" required="is_enable"/>
                                    <field name="lead_days" required="is_enable"/>
                                </group>
                                <group>
                                    <field name="user_ids" widget="many2many_tags" required="is_enable"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Set Notification" class="oe_highlight"
                                type="object" name="set_notification"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shipstation_notification_configuration" model="ir.actions.act_window">
        <field name="name">Shipstation Scheduled Activity Configuration</field>
        <field name="res_model">shipstation.notification.ept</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
