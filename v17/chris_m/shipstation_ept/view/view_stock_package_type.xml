<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipstation_stock_package_type" model="ir.ui.view">
        <field name="name">view_shipstation_stock_package_type</field>
        <field name="model">stock.package.type</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.stock_package_type_form"/>
        <field name="arch" type="xml">
            <data>
                <field name="company_id" position="after">
                    <field name="shipstation_carrier_id" invisible="1"/>
                </field>
                <field name="shipper_package_code" position="attributes">
                    <attribute name="invisible">package_carrier_type != 'shipstation_ept'</attribute>
                </field>
            </data>
        </field>
    </record>

    <record id="tree_view_stock_package_type_inherit" model="ir.ui.view">
        <field name="name">tree_view_stock_package_type_inherit</field>
        <field name="model">stock.package.type</field>
        <field name="inherit_id" ref="stock_delivery.stock_package_type_tree_delivery"/>
        <field name="arch" type="xml">
            <field name="package_carrier_type" position="replace">
                <field name="package_carrier_type" invisible="context.get('no_carrier_col')"/>
            </field>
        </field>
    </record>

    <record id="choose_delivery_package_view_form_inherit" model="ir.ui.view">
        <field name="name">choose.delivery.package.form.ept</field>
        <field name="model">choose.delivery.package</field>
        <field name="inherit_id" ref="stock_delivery.choose_delivery_package_view_form"/>
        <field name="arch" type="xml">
            <field name="delivery_package_type_id" position="replace">
                <field name="shipstation_instance_id" invisible="true"/>
                <field name="shipstation_carrier_id" invisible="true"/>
                <field name="delivery_package_type_id"
                       domain="[('package_carrier_type', '=', context.get('current_package_carrier_type', 'none')),('shipstation_instance_id', '=', shipstation_instance_id),('shipstation_carrier_id','=',shipstation_carrier_id)]"
                       context="{'form_view_ref':'stock.stock_package_type_form'}"/>
            </field>
        </field>
    </record>

</odoo>