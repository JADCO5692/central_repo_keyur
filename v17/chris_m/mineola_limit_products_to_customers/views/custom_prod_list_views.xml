<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- custom.prod.list form view -->
    <record id="mineola_custom_prod_list_form" model="ir.ui.view">
        <field name="name">Mineola: Custom Products List Form</field>
        <field name="model">custom.prod.list</field>
        <field name="arch" type="xml">
            <form string="Cust Prod List">
                <sheet string="Cust Prod List">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <notebook name="mineola_custom_prod_list">
                        <page string="Cust Prod List" name="cust_prod_list">
                            <field name="product_tmpl_ids" widget="many2many_list">
                                <tree string="Cust Prod List">
                                    <field name="priority" widget="priority"/>
                                    <field name="name"/>
                                    <field name="product_tag_ids"/>
                                    <field name="list_price"/>
                                    <field name="standard_price"/>
                                    <!-- <field name="qty_available"/> -->
                                    <field name="barcode" optional="hide"/>
                                    <field name="categ_id" optional="hide"/>
                                    <field name="detailed_type" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Customers That Use This List" name="customers_that_use_this_list">
                            <field name="partner_ids" widget="many2many_list">
                                <tree string="Customers That Use This List">
                                    <field name="name"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="user_id"/>
                                    <field name="activity_ids"/>
                                    <field name="city"/>
                                    <field name="state_id" optional="hide"/>
                                    <field name="country_id"/>
                                    <field name="vat" optional="hide"/>
                                    <field name="category_id" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" />
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- custom.prod.list tree view -->
    <record id="mineola_custom_prod_list_tree" model="ir.ui.view">
        <field name="name">Mineola: Custom Products List Tree</field>
        <field name="model">custom.prod.list</field>
        <field name="arch" type="xml">
            <tree string="Cust Prod List">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="mineola_custom_prod_list" model="ir.actions.act_window">
        <field name="name">Cust Prod List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custom.prod.list</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mineola_custom_prod_list_tree"/>
    </record>

    <menuitem id="mineola_custom_prod_list_menu" name="Cust Prod List" parent="sale.product_menu_catalog" action="mineola_custom_prod_list" sequence="40"/>

</odoo>
